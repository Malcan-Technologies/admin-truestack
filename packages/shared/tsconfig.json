{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "types": ["node"]
  },
  "include": ["lib/**/*", "types/**/*", "prisma/**/*", "generated/**/*"],
  "exclude": ["node_modules"]
}
